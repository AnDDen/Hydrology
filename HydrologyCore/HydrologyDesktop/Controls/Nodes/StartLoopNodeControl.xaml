<local:BaseNodeControl x:Class="HydrologyDesktop.Controls.StartLoopNodeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HydrologyDesktop.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Ellipse Fill="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}"></Ellipse>
        <Ellipse Fill="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Margin="4"></Ellipse>        
        <Ellipse Fill="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" Margin="6"></Ellipse>

        <Grid x:Name="attachPoints" Visibility="Hidden">
            <Ellipse Fill="#FFF4F4F5" Stroke="Black" Height="8" Width="8"
                     MouseEnter="Ellipse_MouseEnter" MouseLeave="Ellipse_MouseLeave" MouseDown="Ellipse_MouseDown" MouseUp="Ellipse_MouseUp" />
        </Grid>
    </Grid>
</local:BaseNodeControl>
