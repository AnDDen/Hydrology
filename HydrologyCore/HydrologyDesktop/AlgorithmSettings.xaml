<Window x:Class="HydrologyDesktop.AlgorithmSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки алгоритма" Height="300" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <Label Content="Исходные данные" FontWeight="Medium" HorizontalAlignment="Left" Margin="5 10 5 0" />
            <WrapPanel HorizontalAlignment="Stretch" VerticalAlignment="Top">    
                <TextBox x:Name="folderTextBox" Width="140" Margin="5 0 5 0" />
                <Button Content="Выбрать папку" Width="120" Height="24" Click="Button_Click" Margin="5 0 5 0"/>
            </WrapPanel>
            <Label Content="Параметры" FontWeight="Medium" Margin="5 10 5 0"/>
            <DataGrid x:Name="paramsGrid" ItemsSource="{Binding}" Margin="5 0 5 10" HorizontalAlignment="Stretch" AutoGenerateColumns="False" Height="120" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserSortColumns="False" HeadersVisibility="Column" CanUserAddRows="False" CanUserDeleteRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Параметр" IsReadOnly="True" Binding="{Binding Path=Name}" Width="128" />
                    <DataGridTextColumn Header="Значение" IsReadOnly="False" Binding="{Binding Path=Value}" Width="128" />
                </DataGrid.Columns>
            </DataGrid>
            <WrapPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5 0 5 0" >
                <Button Content="ОК" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="24" Click="Button_Click_1"/>
                <Button Content="Отмена" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Height="24" Margin="5 0 0 0" IsCancel="True"/>
            </WrapPanel>
            
        </StackPanel>
    </Grid>
</Window>
