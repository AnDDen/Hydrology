<Window xmlns:HydrologyDesktopControls="clr-namespace:HydrologyDesktopControls;assembly=HydrologyDesktopControls"  xmlns:HydrologyDesktop="clr-namespace:HydrologyDesktop;assembly=HydrologyDesktopControls"  x:Class="HydrologyDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hydrology" Height="349.388" Width="530.97">
    <Window.Resources>
        <Style x:Key="AlgButtonStyle">
            <Setter Property="Button.Margin" Value="5 0 5 5"></Setter>
        </Style>
        <Style x:Key="AlgNodeStyle">
            <Setter Property="HydrologyDesktop:AlgNodeControl.Width" Value="150"></Setter>
            <Setter Property="HydrologyDesktop:AlgNodeControl.Height" Value="75"></Setter>
            <Setter Property="HydrologyDesktop:AlgNodeControl.Margin" Value="10 10 10 10"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel x:Name="AlgorithmButtonsPanel" Width="150" HorizontalAlignment="Left" Background="#FFF1F1F1" Panel.ZIndex="2">
            <Label Content="Алгоритмы" FontWeight="Medium" Padding="10 5" Background="#FFC8C8C8" Margin="0,0,0,5"/>
        </StackPanel>
        <WrapPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="150 0 0 0" Background="#FFF1F1F1" Panel.ZIndex="2">
            <Label Content="Эксперимент" FontWeight="Medium" Padding="10 5"/>
            
            <Button x:Name="RunExperimentBtn" Content="Запуск" Width="70" Height="20" Click="Button_Click"/>
        </WrapPanel>
        <WrapPanel x:Name="ExperimentPanel" Margin="150 25 0 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="1">
        </WrapPanel>
        <WrapPanel x:Name="EdgesPanel" Margin="150 25 0 0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Panel.ZIndex="1">

        </WrapPanel>
    </Grid>
</Window>
